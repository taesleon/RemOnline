<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/prefix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_coroner"
        android:gravity="center_vertical|center_horizontal"
        android:text="D"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/prefix"
        android:text="156 25.00"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeSuper" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prefix"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/prefix"
        android:minLines="2"
        android:text="примечание"
        android:textSize="@dimen/textSizeSmall" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="data"
        android:textSize="@dimen/textSizeSmall" />

    <TextView
        android:id="@+id/groupName"
        android:textSize="@dimen/textSizeSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:text="number" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/groupName"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_coroners_discount"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sum"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/sum"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cash"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/colorid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/none_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nonecash"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/storeuuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/discount"
        android:layout_alignEnd="@+id/uuid"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/agent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sum"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/discount"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="@dimen/textSizeSmall"
        android:textAllCaps="true" />
</RelativeLayout>