<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/group_prefix"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/line"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/cirle_group"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeSmall" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textColor="#FFE44D33"
        android:textSize="@dimen/textSizeSmall"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/discount"
        android:gravity="center_vertical"
        android:text="line1"
        android:textColor="@color/material_blue_grey_80"
        android:textSize="@dimen/textSizeSmall" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="@dimen/textSizeSuper"

        android:layout_toRightOf="@+id/group_prefix"
        android:minLines="2"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeNormal" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"

        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/line"
        android:gravity="right|center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="code"
        android:textColor="@color/material_blue_grey_80"
        android:textSize="@dimen/textSizeSmall"
        android:textStyle="italic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingLeft="0dp"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="@dimen/textSizeNormal"
            android:visibility="invisible" />



        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>


</RelativeLayout>