<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:actionMenuTextAppearance">@style/customMenu</item>
    </style>

    <style name="MyEdittext" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">0dp</item>
        <item name="colorBackgroundFloating">@color/colorPrimary</item>
    </style>

    <style name="customMenu">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>
</resources>
